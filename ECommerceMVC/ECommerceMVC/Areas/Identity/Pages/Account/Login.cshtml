@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    
}


            <form id="formAuthentication" class="mb-2" method="post">              
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.UserNameOrEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="TranDuyKhanh001" />
                    <label asp-for="Input.UserNameOrEmail">User Name Or Email</label>
                    <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                </div>
                    <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="123456" />
                    
                    <label asp-for="Input.Password" >Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    
                </div>
                <div class="checkbox mb-3 ">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>          
            </form>
    
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    var cssBtn = provider.DisplayName.Equals("Google") ? "success" : "info";
                                    <div class="mb-2">
                                        <button type="submit" class="w-100 btn btn-lg btn-@cssBtn" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    </div>
                                    
                                }
                            
                        </div>
                    </form>
                }
            }
<div>
    <p>
        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
    </p>
    <p>
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
    </p>
    <p>
        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
    </p>
</div>
<p class="text-center">
    <span>New on our platform?</span>
    <a asp-area="Identity" asp-page="/Account/Register">Create an account</a>
</p>
   

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
